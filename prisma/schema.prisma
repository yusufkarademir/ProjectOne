generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  passwordHash  String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  events        Event[]
}

model Event {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  date        DateTime
  endDate     DateTime?
  description String?
  location    String?
  coverImage  String?
  schedule    Json?    // Array of { time: string, title: string, description: string }
  announcements Json?  // Array of { id: string, title: string, content: string, date: string }
  themeConfig Json?    // Stores theme settings like colors, fonts
  uploadConfig Json?   // Stores upload settings: maxFileSize, allowedTypes, maxFilesPerUpload
  privacyConfig Json?  // Stores privacy settings: isGalleryPublic, allowDownload, requireModeration
  qrCodeUrl   String?
  organizerId String
  organizer   User     @relation(fields: [organizerId], references: [id])
  photos      Photo[]
  
  // Photo Hunt (Game) Features
  isGameEnabled       Boolean  @default(false)
  isAiModerationEnabled Boolean @default(true)
  isWatermarkEnabled Boolean @default(false) // New field for watermark protection
  isPasswordProtected Boolean @default(false) // New field for guest password protection
  guestPin      String?  // 4-6 digit PIN for guest access
  viewCount     Int      @default(0) // Analytics: Total views
  missions            Mission[]

  // Social Wall Features
  socialSettings      Json?    // { enabled: boolean, features: { comments: boolean, ratings: boolean, reactions: boolean, tags: boolean }, availableTags: string[] }
  
  // Stage Mode Configuration
  stageConfig         Json?    // { isActive: boolean, mode: 'lounge' | 'hype' | 'cinema', title: string, message: string, showClock: boolean, showQr: boolean, musicEnabled: boolean, musicType: string, countdownTarget: string, videoUrl: string }

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Photo {
  id          String   @id @default(cuid())
  url         String
  type        String   @default("image") // image, video
  mimeType    String?  // image/jpeg, video/mp4 etc.
  eventId     String
  event       Event    @relation(fields: [eventId], references: [id])
  uploaderIp  String?
  status      String   @default("pending") // pending, approved, rejected
  downloadCount Int    @default(0) // Analytics: Total downloads
  
  missionId   String?
  mission     Mission? @relation(fields: [missionId], references: [id])

  // Social Wall Data
  isPinned    Boolean  @default(false)
  rating      Float    @default(0)
  tags        String[] // Array of tags
  comments    Comment[]
  reactions   Reaction[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Mission {
  id        String   @id @default(cuid())
  text      String
  icon      String?
  order     Int      @default(0)
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  photos    Photo[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Social Wall Models
model Comment {
  id        String   @id @default(cuid())
  content   String
  photoId   String
  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  authorId  String?  // Anonymous user ID (device/cookie based)
  status    String   @default("approved") // approved, pending, rejected
  
  createdAt DateTime @default(now())
}

model Reaction {
  id        String   @id @default(cuid())
  type      String   // emoji code or name
  photoId   String
  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  authorId  String?  // Anonymous user ID
  
  createdAt DateTime @default(now())
  
  @@unique([photoId, authorId, type]) // One reaction of each type per user per photo
}
